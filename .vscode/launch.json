{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",  // Изпълнява .exe файл с името на текущия .c файл
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,  // Отваря външна конзола за програмата
            "MIMode": "gdb",  // Използва GDB за дебъгване
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",  // Пътят до gdb.exe, коригирай ако е различен
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build program",  // Стартира компилация преди дебъгване
            "miDebuggerArgs": "",
            "logging": {
                "engineLogging": true,
                "trace": true,
                "traceResponse": true
            }
        }
    ]
}
